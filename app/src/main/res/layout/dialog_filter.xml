<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeFilter"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/filterBerdasarkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:text="Filter Berdasarkan"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/opsiFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="65dp"
        android:text="Opsi"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/kategoriFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:text="Kategori"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/jumlahFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="135dp"
        android:text="Jumlah"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/keteranganFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="170dp"
        android:text="Keterangan"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tanggalFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="205dp"
        android:text="Tanggal"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"/>




    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="265dp"
        android:layout_marginEnd="265dp"
        android:src="@drawable/silang"
        android:contentDescription="Tutup dialog"
        android:background="@null"
        />

</RelativeLayout>
